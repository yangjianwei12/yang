# Definitions for A2DP in Hydra builds.
# Kymera doesn't support shunt on Hydra, so don't include any shunt stuff.

%cpp
#
# Which components do we want to include on this chip?
#
AX_CONFIG_H
APTXA_DYNAMIC_MEMORY
ADAPTIVE_R3_BUILD


%build
REL_EXT_BUILD=TRUE

#
# Capabilities we want to include on the chip
# This list gets turned into a set of defines of the form INSTALL_OPERATOR_XXXX
#
%list CFG_CAPABILITIES
APTX_ADAPTIIVE_R3_DECODE


# List of global include paths
%list ALL_INCDIRS
../lib_private/aptx_adaptive_r3_common
../lib_private/aptx_adaptive_r3_decode
../lib/codec
capabilities/a2dp_decode
components/patch

# List of libraries to build
%list CFG_LIBS
capabilities/aptx_adaptive_r3_decode/aptx_adaptive_r3_decode

# Libraries needed by aptx capabilities
../lib_private/aptx_adaptive_r3_common/aptx_adaptive_r3_common
../lib_private/aptx_adaptive_r3_decode/aptx_adaptive_r3_decode

%list MAXIM_LIBS
../lib_private/aptx_adaptive_r3_common
../lib_private/aptx_adaptive_r3_decode


%list PRIVATE_LIBS
../lib_private/
