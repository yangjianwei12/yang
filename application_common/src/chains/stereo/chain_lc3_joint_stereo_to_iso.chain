<!--Chain for A2DP Joint Stereo Encoder(LC3) to ISO -->

<chain name="CHAIN_LC3_JOINT_STEREO_TO_ISO" id="0" generate_endpoint_roles_enum="False" generate_operator_roles_enum="False">

    <include_header name="app_chain_config.h"/>
    <include_header name="kymera_chain_roles.h"/>

    <operator name="OPR_SPEAKER_RESAMPLER" id="CAP_ID_IIR_RESAMPLER">
        <sink name="IN_0" terminal="0"/>
        <sink name="IN_1" terminal="1"/>
        <source name="OUT_0" terminal="0"/>
        <source name="OUT_1" terminal="1"/>
    </operator>

    <operator name="OPR_RATE_ADJUST" id="CAP_ID_RATE_ADJUST">
        <sink name="IN_0" terminal="0"/>
        <sink name="IN_1" terminal="1"/>
        <source name="OUT_0" terminal="0"/>
        <source name="OUT_1" terminal="1"/>
    </operator>

    <operator name="OPR_LC3_ENCODE_SCO_ISO" id="CAP_ID_LC3_SCO_ISO_ENC" priority="medium">
        <sink name="IN_0" terminal="0"/>
        <sink name="IN_1" terminal="1"/>
        <source name="OUT" terminal="0"/>
    </operator>

    <input sink="OPR_SPEAKER_RESAMPLER.IN_0" role="EPR_ISO_FROM_AIR_LEFT"/>
    <input sink="OPR_SPEAKER_RESAMPLER.IN_1" role="EPR_ISO_FROM_AIR_RIGHT"/>

    <connection source="OPR_SPEAKER_RESAMPLER.OUT_0" sink="OPR_RATE_ADJUST.IN_0"/>
    <connection source="OPR_SPEAKER_RESAMPLER.OUT_1" sink="OPR_RATE_ADJUST.IN_1"/>

    <connection source="OPR_RATE_ADJUST.OUT_0" sink="OPR_LC3_ENCODE_SCO_ISO.IN_0"/>
    <connection source="OPR_RATE_ADJUST.OUT_1" sink="OPR_LC3_ENCODE_SCO_ISO.IN_1"/>

    <output source="OPR_LC3_ENCODE_SCO_ISO.OUT" role="EPR_ISO_TO_AIR_LEFT"/>

</chain>
